// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int                @id @default(autoincrement())
  username    String
  password    String
  email       String             @unique
  role        UsersRoles[]
  internalSec UsersInternalSec[]
  ticket      UsersTickets[]
}

model UsersRoles {
  userId Int
  user   Users @relation(fields: [userId], references: [id])
  roleId Int
  role   Roles @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
}

model Roles {
  id              Int               @id @default(autoincrement())
  name            String
  UsersRoles      UsersRoles[]
  RolePermissions RolePermissions[]
}

model Permissions {
  id              Int               @id @default(autoincrement())
  name            String
  RolePermissions RolePermissions[]
}

model RolePermissions {
  roleId       Int
  role         Roles       @relation(fields: [roleId], references: [id])
  permissionId Int
  permission   Permissions @relation(fields: [permissionId], references: [id])

  @@id([roleId, permissionId])
}

model UsersInternalSec {
  userId        Int
  user          Users       @relation(fields: [userId], references: [id])
  internalSecId Int
  internalSec   InternalSec @relation(fields: [internalSecId], references: [id])

  @@id([userId, internalSecId])
}

model InternalSec {
  id               Int                @id @default(autoincrement())
  name             String
  UsersInternalSec UsersInternalSec[]
  dependencyId     Int
  dependencies     Dependencies       @relation(fields: [dependencyId], references: [id])
  tickets          Tickets[]
  services         Services[]
}

model Services {
  id            Int         @id @default(autoincrement())
  name          String
  internalSecId Int
  internalSec   InternalSec @relation(fields: [internalSecId], references: [id])
  Tickets       Tickets[]
}

model Dependencies {
  id          Int           @id @default(autoincrement())
  name        String       @unique
  description String?
  InternalSec InternalSec[]
}

model UsersTickets {
  userId   Int
  user     Users   @relation(fields: [userId], references: [id])
  ticketId Int
  ticket   Tickets @relation(fields: [ticketId], references: [id])

  @@id([userId, ticketId])
}

model Tickets {
  id            Int            @id @default(autoincrement())
  title         String
  description   String?
  status        String         @default("open")
  priority      String         @default("low")
  UsersTickets  UsersTickets[]
  InternalSecId Int
  internalSec   InternalSec    @relation(fields: [InternalSecId], references: [id])
  ServiceId     Int
  service       Services       @relation(fields: [ServiceId], references: [id])
}
